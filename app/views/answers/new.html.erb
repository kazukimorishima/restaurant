<div class="answer">
    <h1>お問合せへの回答</h1>
    <p>名前：<%= @inquiry.name %></p>
    <p>メール：<%= @inquiry.email %></p>
    <p>電話：<%= @inquiry.phone %></p>
    <p>内容：<%= simple_format(@inquiry.content) %></p>
    <hr>
    <%= form_for [@inquiry,@answer] do |f| %>
      <%= f.hidden_field :inquiry_id, :value => @inquiry.id %>
      <%= f.text_area :answer %>
      <p><%= f.submit "回答する", :id => "answer-btn" %></p>
    <% end %>
</div>