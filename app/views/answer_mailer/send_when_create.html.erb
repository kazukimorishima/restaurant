<!doctype html>
<html lang="ja">
    <head>
        <meta content="text/html; charset=UTF-8" />
    </head>
    
    <body>
        <h2><%= @inquiry.name %> 様</h2>
        <hr>
        <p><%= @inquiry.name %>様、お問合せ内容の回答です</p>
        <hr>
        <p>名前：<%= @inquiry.name %></p>
        <p>メール：<%= @inquiry.email %></p>
        <p>電話：<%= @inquiry.phone %></p>
        <p>内容：<%= simple_format(@inquiry.content) %></p>
        <hr>
        <p>回答：<%= simple_format(@answer.answer) %></p>
        
    </body>
</html>