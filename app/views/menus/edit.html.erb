<div class="admin">
    <div class="border col-7">
        <br>
        <h1>メニュー編集</h1>
        <br>
        <div class="row">
            <div class="col-md">
                <%= form_for @menu do |f| %>
                    <form>
                        <div class="form-group">
                            <label>カテゴリー : <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class: "form-control"}) %></label>
                            <br>
                            <label>メニュー名：<%= f.text_field :name, {class: "form-control"} %></label>
                            <br>
                            <label>詳細説明：<%= f.text_field :detail, {class: "form-control"} %></label>
                            <br>
                            <label>金額：<%= f.text_field :price, {class: "form-control"} %></label>
                            <br>
                            <br>
                            <%= f.submit "登録", class: "btn btn-primary" %>
                        </div>
                    </form>
                <% end %>
                <a href="/menus/<%= @menu.id %>" data-method="delete"><button type="button" class="btn btn-danger">削除する</button></a>
                <br>
                <br>
                <a href="/admin"><button type="button" class="btn btn-success">トップに戻る</button></a>
                <br>
                <br>
            </div>
        </div>
    </div>
</div>